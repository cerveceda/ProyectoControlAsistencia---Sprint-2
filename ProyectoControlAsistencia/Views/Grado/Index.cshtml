@model IEnumerable<ENTIDAD.Grado>

@{
    ViewBag.Title = "Lista de Grados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@section styles{
    <link href="//cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css" rel="stylesheet" />
}

<h2>Lista de Grados y Secciones</h2>

<p>

    <a class="btn btn-primary" href="@Url.Action("Crear","Grado")"><i class="glyphicon glyphicon-plus"></i> Nuevo Grado</a>

</p>
<table class="table" id="tablegrados">
    <thead>
        <tr>
            <th>
                Codigo Grado
            </th>
            <th>
                Nombre
            </th>
            <th>
                Seccion
            </th>
            <th>
                Nivel
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CodGrado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Seccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nivel)
                </td>
                <td>


                    <a class="btn btn-primary btn-xs" href="@Url.Action("Editar","Grado", new { id=item.CodGrado})"><i class="glyphicon glyphicon-edit"></i>Editar</a>
                    <a class="btn btn-info btn-xs" href="@Url.Action("GetGrado","Grado", new { id=item.CodGrado})"><i class="glyphicon glyphicon-pencil"></i>Detalles</a>
                    <a class="btn btn-danger btn-xs" title="Eliminar" href="@Url.Action("Eliminar","Grado", new { id=item.CodGrado})"><i class="glyphicon glyphicon-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>


</table>

@section scripts{
    <script src="//cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    
    <script>
        $(document).ready(function () {
            $('#tablegrados').DataTable({
                "pageLength": 20,
                lengthMenu: [2, 10, 20],

            });

        });
    </script>

}