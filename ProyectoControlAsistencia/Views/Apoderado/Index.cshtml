                    <a class="btn btn-info btn-xs" href="@Url.Action("Detalles","Apoderado", new { id=item.DniApoderado})"><i class="glyphicon glyphicon-pencil"></i>Detalles</a>
                    <a class="btn btn-danger btn-xs" title="Eliminar" href="@Url.Action("Eliminar","Apoderado", new { id=item.DniApoderado})"><i class="glyphicon glyphicon-trash"></i></a>

